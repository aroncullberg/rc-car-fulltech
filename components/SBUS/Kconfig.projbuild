menu "SBUS Configuration"

    # Enable SBUS
    config SBUS_ENABLE
        bool "Enable SBUS"
        default y
        help 
            Enable the SBUS component for input

    # Task configuration
    config SBUS_TASK_STACK_SIZE
        int "SBUS Task Stack Size"
        default 4096
        help
            Stack size for SBUS processing task

    config SBUS_TASK_PRIORITY
        int "SBUS Task Priority"
        default 5
        range 0 25
        help
            Priority of the SBUS processing task

    # Channel configuration
    menu "Channel Configuration"
        # Channel 0 (Throttle)
        menu "Channel 0 (Throttle)"
            choice SBUS_CH0_TYPE
                prompt "Ch 0 Type"
                default SBUS_CH0_SYMMETRIC
                help 
                    Select the type of channel 0 (Throttle)
                
                config SBUS_CH0_SYMMETRIC
                    bool "Symmetric (-1 to 1)"
                config SBUS_CH0_UNIPOLAR
                    bool "Unipolar (0 to 1)"
                config SBUS_CH0_BINARY
                    bool "Binary (0 or 1)"
            endchoice

            config SBUS_CH0_MIN
                int "Channel 0 Minimum Value"
                default 172
                range 0 2047
                help
                    Minimum raw value for channel 0
    
            config SBUS_CH0_CENTER
                int "Channel 0 Center Value"
                default 992
                range 0 2047
                depends on SBUS_CH0_SYMMETRIC
                help
                    Center raw value for channel 0 (only used for symmetric channels)
    
            config SBUS_CH0_MAX
                int "Channel 0 Maximum Value"
                default 1811
                range 0 2047
                help
                    Maximum raw value for channel 0
        endmenu

